@model InternshipManagementSystem.Models.tbl_application

@{
    ViewBag.Title = "Create Application";
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>Application Page</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item">@ViewBag.username</h3>
        <a href="~/Home/Mainpage?username=@ViewBag.username" class="w3-bar-item w3-button">Main Page</a>
        <a href="~/tbl_application/Create?username=@ViewBag.username" class="w3-bar-item w3-button">Internship Application</a>
        <a href="~/tbl_application/Report?username=@ViewBag.username" class="w3-bar-item w3-button">Upload Report</a>
        <a href="~/Home/Index" class="w3-bar-item w3-button">Exit</a>
    </div>

    <div style="margin-left:15%">

        <div class="w3-container w3-teal">
            <h1>Create Application</h1>
        </div>
        <div class="w3-container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="col-md-10">
                        <p><b>Internship Type</b></p>
                        @Html.EditorFor(model => model.ap_internshiptype, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_internshiptype, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        <p><b>Department ID (Computer Engineering = 1, Industry Engineering=2)</b></p>
                        @Html.EditorFor(model => model.ap_studentdepartment , new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_studentdepartment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Company Name</b></p>
                        @Html.EditorFor(model => model.ap_companyname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_companyname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Company Address</b></p>
                        @Html.EditorFor(model => model.ap_companyaddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_companyaddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Company Phone Number</b></p>

                        @Html.EditorFor(model => model.ap_companyphonenumber, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.ap_companyphonenumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Company Mail</b></p>
                        @Html.EditorFor(model => model.ap_companymail, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                        @Html.ValidationMessageFor(model => model.ap_companymail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Starting Date</b></p>
                        @Html.TextBoxFor(model => model.ap_startingdate, new { type = "date" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>End Date</b></p>
                        @Html.TextBoxFor(model => model.ap_enddate, new { type = "date" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Working Day</b></p>
                        @Html.EditorFor(model => model.ap_workingday, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.ap_workingday, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Document</b></p>
                        @Html.TextBoxFor(model => model.ap_documentbycompany, new { type = "file" })
                        @Html.ValidationMessageFor(model => model.ap_documentbycompany)

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Manager Name</b></p>
                        @Html.EditorFor(model => model.ap_managername, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_managername, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Manager Lastname</b></p>
                        @Html.EditorFor(model => model.ap_managerlastname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_managerlastname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Manager Mail</b></p>
                        @Html.EditorFor(model => model.ap_managermail, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                        @Html.ValidationMessageFor(model => model.ap_managermail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Manager Title</b></p>
                        @Html.TextBoxFor(model => model.ap_managertitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ap_managertitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Apply" class="btn btn-info" />
                    </div>
                </div>
            </div>
            }
        </div>

    </div>
</body>
</html>





